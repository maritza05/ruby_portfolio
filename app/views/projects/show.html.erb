<div id="post_show_content" class="skinny_wrapper wrapper_pading">
		<header>
			<p class="date"><%= @project.created_at.strftime('%S, %B %d') %></p>
			<h1><%= @project.title %></h1>
			<hr>
		</header>
		<div id="content">
			<%= markdown @project.description %>

			<div class="button_wrapper">
				<a class="project_button" href="<%= @project.link %>" target="_blank">Visit <%= @project.title %></a>
			</div>
		</div>

		<% if user_signed_in? %>
			<div id="admin_links">
			<%= link_to "Edit", edit_project_path(@project) %>
			<%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure?"} %>
			</div>
		<% end %>

		<hr>
</div>